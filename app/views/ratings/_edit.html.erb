<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel"><%= t('.editreview')%></h4>
</div>
<div class="modal-body">
  <%= form_for(@rating, url: rating_path(@rating.id), method: :put) do |f| %>
    <div class="">
        <fieldset class="rating">
          <%= f.radio_button :rate, 5, id: 'star5edit' %>
          <%= label_tag :star5edit, "", class: 'full', title: '5 Stars' %>
          <%= f.radio_button :rate, 4, id: 'star4edit'  %>
          <%= label_tag :star4edit, "", class: 'full', title: '4 Stars' %>
          <%= f.radio_button :rate, 3, id: 'star3edit'  %>
          <%= label_tag :star3edit, "", class: 'full', title: '3 Stars' %>
          <%= f.radio_button :rate, 2, id: 'star2edit'  %>
          <%= label_tag :star2edit, "", class: 'full', title: '2 Stars' %>
          <%= f.radio_button :rate, 1, id: 'star1edit'  %>
          <%= label_tag :star1edit, "", class: 'full', title: '1 Star' %>
        </fieldset>
    </div>
    <div class="form-group">
      <%= f.text_area :comment, class: 'form-control', placeholder: t('.comment')%>
    </div>
  
    <div class="actions">
      <%= f.submit t('.editreview'), class: 'btn btn-primary', style: 'width: 100%;' %>
    </div>
  
  <% end %>
</div>

