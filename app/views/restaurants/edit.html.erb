<% if user_signed_in? %>
 <% if current_user.admin %>
<div class="container" style="margin-top: 20px;">
      <div class="row">
        <div class="col-md-6">
          <%= form_for(@restaurant) do |f| %>
            <div class="form-group">
			  <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Restaurant Name' %>
            </div>
            <div class="form-group">
				<%= f.label :description %>
              <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
            </div>
            <div class="form-group">
				<%= f.label :address %>
              <%= f.text_area :address, class: 'form-control', placeholder: 'Restaurant Address' %>
            </div>
            <div class="form-group">
				<%= f.label :contact %>
              <%= f.text_field :contact, class: 'form-control', placeholder: 'Contact Number #' %>
            </div>
			
            <div class="form-group">
				<%= f.label :map %>
              <%= f.text_field :map, class: 'form-control', placeholder: 'Map Location' %>
            </div>
			
            <div class="form-group">
				<%= f.label :low_price_range %>
              <%= f.number_field :low_price_range, class: 'form-control', step: 0.01, min: 0.01 %>
            </div>
			
            <div class="form-group">
				<%= f.label :high_price_range %>
              <%= f.number_field :high_price_range, class: 'form-control', step: 0.01, min: 0.01 %>
            </div>
			
            <div class="actions">
              <%= f.submit 'Edit Restaurant Information', class: 'btn btn-primary', style: 'width: 100%;' %>
            </div>
          <% end %>
        </div>
	</div>
</div>
<% end%>
<% end%>

