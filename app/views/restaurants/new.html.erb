<div class="container" style="margin-top: 20px;">
  <% if user_signed_in? %>
    <div class="jumbotron">
      <div class="row">
        <div class="col-md-6">
          <h2 class="text-center"><%= t('.enterrestoinfo')%></h2>
		  <p>
			  <%= t('.restoinfodetails')%>
		  </p>
        </div>
        <div class="col-md-6">
          <%= form_for(@restaurant, url: restaurants_path) do |f| %>
            <div class="form-group">
              <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: t('.restoname') %>
            </div>
            <div class="form-group">
              <%= f.text_area :description, class: 'form-control', placeholder: t('.description') %>
            </div>
            <div class="form-group">
              <%= f.text_area :address, class: 'form-control', placeholder: t('.restoaddress') %>
            </div>
            <div class="form-group">
              <%= f.text_field :contact, class: 'form-control', placeholder: t('.contact') %>
            </div>
            <div class="actions">
              <%= f.submit t('.submitresto'), class: 'btn btn-primary', style: 'width: 100%;' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    You need to sign in first! <%= link_to 'Click Here', new_user_session_path %>
  <% end %>
</div>


