<div class="container" style="margin-top: 20px;">
  <% if user_signed_in? %>
    <div class="jumbotron">
      <div class="row">
        <div class="col-md-6">
          <h2 class="text-center">Enter your restaurant's information</h2>
          <p align="center">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
        </div>
        <div class="col-md-6">
          <%= form_for(@restaurant, url: restaurants_path) do |f| %>
            <div class="form-group">
              <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Restaurant Name' %>
            </div>
            <div class="form-group">
              <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
            </div>
            <div class="form-group">
              <%= f.text_area :address, class: 'form-control', placeholder: 'Restaurant Address' %>
            </div>
            <div class="form-group">
              <%= f.text_field :contact, class: 'form-control', placeholder: 'Contact Number #' %>
            </div>
            <div class="actions">
              <%= f.submit 'Submit Your Restaurant', class: 'btn btn-primary', style: 'width: 100%;' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    You need to sign in first! <%= link_to 'Click Here', new_user_session_path %>
  <% end %>
</div>


