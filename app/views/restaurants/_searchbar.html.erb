<div class="container search_container" style="margin-top: 20px;">
  <div style='text-align: center;'>
      <%= form_tag(restaurant_search_path, method: :get, id: 'search_form') do %>
        <div class="input-group">
          <%= text_field_tag :searchQuery, (@searchQuery.blank? ? nil : @searchQuery), class: "form-control search_field", placeholder: "Search for fudz/cuisine/dishes...", id: 'search_field', required: true, style: 'height: 40px;' %>
          <span class="input-group-btn">
            <%= submit_tag "Search", class: "btn btn-default", style: 'height: 40px; background-color: #CF2228; color: #fff; border: 1px solid #CF2228;'%>
          </span>
        </div>
      <% end %>
        <div class="row search" style="margin-top: 10px;">
          <div class="col-md-12">
            <div class="dropdown">
              <%= link_to "Search tools#{icon('caret-down', style: 'margin-left: 10px;')}".html_safe, nil, class: 'dropdown-toggle', data: { toggle: 'dropdown'}, style: 'color: #000;' %>
              <ul class="dropdown-menu" style="width: 100%; color: #000; text-shadow: none;">
                <% unless Food.all.empty? %>
                  <%= form_tag(restaurant_search_path, method: :get, style: 'padding: 20px;', id: 'filter_search_form') do %>
                    <div class="form-group">
                      <%= select_tag :location, options_from_collection_for_select(Location.where(restaurant_id: nil),"id","address",1), prompt: 'Select a Place', class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= select_tag :cuisine, options_from_collection_for_select(Cuisine.all,"id","name"), prompt: 'Select a Cuisine', class: 'form-control' %>
                    </div>
                    Filter by price range:
                    <div class="row">
                      <div class="col-md-3 col-sm-3 col-xs-3">
                        <b>PHP <%= Food.min %></b> 
                      </div>
                      <div class="col-md-6 col-sm-6 col-xs-6">
                        <input id="price_slider" name= "price_range" type="text" class="span2" value="" data-slider-min="<%= Food.min %>" data-slider-max="<%= Food.max %>" data-slider-step="5" data-slider-value="[<%= Food.min %>,<%= Food.max %>]"/> 
                      </div>
                      <div class="col-md-3 col-sm-3 col-xs-3">
                        <b class="pull-right">PHP <%= Food.max %></b>
                      </div>  
                    </div>
                    <%= hidden_field_tag :searchQuery, '', id: 'filter_search_field' %>
                    <div class="actions" style="margin-top: 20px;">
                      <%= submit_tag 'Search', class: 'btn btn-default', style: 'width: 100%;', id: 'filter_search_button'%>
                    </div>
                  <% end %>
                <% else %>
                  <h4 class="text-center" style='padding: 20px;'>No available dishes yet.</h4>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
    </div>
</div>