<% unless @posts.empty? %>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr style="background-color: #404040;">
            <th>Announcement / Post</th>
            <th>Date Posted</th>
            <th><%= t('.actions')%></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.comment %></td>
              <td><%= post.created_at.strftime("%B %d, %Y - %I:%M %p")%></td>
              <td style="width: 150px;"><%= link_to t('.edit'), edit_post_path(post.id), class: 'btn btn-primary outline', remote: true,  data: { toggle: 'modal', target: '#myModal'} %> <%= link_to t('.delete'), post_path(post.id), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }, remote: true%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    No Posts
  <% end %>