<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel"><%= t('.addpost')%></h4>
</div>
<div class="modal-body">
  <div id = "post_alert_area"></div>
  <%= form_for(@post, url: posts_path(resto_id: @post.restaurant), remote: true) do |f| %>
    <div class="form-group">
      <%= f.text_area :comment, class: 'form-control', placeholder: t('.placepost'), required: true %>
    </div>
    <div class="actions">
      <%= f.submit t('.createpost'), class: 'btn btn-primary', style: 'width: 100%;' %>
    </div>
  
  <% end %>
</div>

