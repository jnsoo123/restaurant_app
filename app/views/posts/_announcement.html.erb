<% if @posts.present? %>
  <% @posts.each do |post| %>
    <div class="media" style="padding: 10px; margin: 0px;">
      <div class="media-left" style="padding: 0 25px 10px 10px;">
        <div style="background: url('<%= asset_path(display_resto(post.restaurant)) %>'); background-size: cover; background-position: center center; width: 64px; height: 64px;" class="img-circle"></div>
      </div>
      <div class="media-body" style="max-width: 575px;">
        <h4 class="media-heading">
          <%= post.restaurant.name %> <small> - <%= distance_of_time_in_words_to_now(post.created_at) %> ago</small>
        </h4>
        <p><%= post.comment %></p>
        <p>
          <% if post.user_liked?(current_user) %>
              <%= link_to "#{icon('heart-o', pluralize(post.likes.count, 'Unlike'))}".html_safe, delete_like_path(user: current_user.id, post: post.id), class: 'btn btn-like-comment', method: :delete, remote: true %> 
          <% else %>
            <%= link_to "#{icon('heart-o', pluralize(post.likes.count, 'Like'))}".html_safe, likes_path(post_id: post.id), class: 'btn btn-like-comment', method: :post, remote: true %> 
          <% end %>
          <%= link_to "#{icon('comments-o', pluralize(post.replies.count, 'Reply'))}".html_safe, new_reply_path(post: post.id), class: 'btn btn-like-comment', remote: true %>
        </p>
        
      </div>
    </div>
    <% if post.replies.present? %>
      <% post.replies.last(3).each do |reply| %>
        <div class="media" style="padding: 10px 50px 10px 50px; margin: 0px;">
          <div class="media-left">
            <div style="background: url('<%= asset_path(display_user(reply.user)) %>'); background-size: cover; background-position: center center; width: 40px; height: 40px;" class="img-circle"></div>
          </div>
          <div class="media-body" style="max-width: 565px;">
            <h5 class="media-heading">
              <%= reply.user.name %> <small> - <%= distance_of_time_in_words_to_now(reply.created_at) %> ago</small>
            </h5>
            <p><%= reply.comment %></p>
          </div>
        </div>
      <% end %>
    <% end %>
    
    <div id="post_reply_<%= post.id %>" style="padding: 5px 20px;">
          
    </div>
  <% end %>
<% end %>