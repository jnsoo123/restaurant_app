<!DOCTYPE html>
<html>
<head>
  <title>Fudz</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<!--  <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">-->
</head>
<body>

  <nav id="top-nav" class="navbar navbar-default" style="margin-bottom: 0px;">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Fudz', home_path, class: 'navbar-brand'%>
      </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', home_path %></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Contact</a></li>
          <% if user_signed_in? %>
		  	     <% if current_user.admin?%>
				         <li><%= link_to "Users", administrator_path %> </li>
				         <li><%= link_to "Restaurants", restaurants_index_path %> </li>
				         <li><%= link_to "Cuisines", cuisines_index_path %> </li>
						 <li><%= link_to "Reviews", cuisines_index_path %> </li>
			        <% end%>
		      <% end%>
		  
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="height: 100%;"><%= "<span class='glyphicon glyphicon-user' style='margin-right: 5px;'></span> #{current_user.name} <span style='margin-left: 5px;' class='glyphicon glyphicon-chevron-down'></span>".html_safe %></a>
              <ul id="dropdown-menu" class="dropdown-menu">
                <li><%= link_to 'View Profile', user_profile_path(current_user.id) %></li>

                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Login', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <% end %>


        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

TESTING


<%= yield %>

</body>
</html>
