<!DOCTYPE html>
<html>
<head>
  <title>Fudz</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Abel" rel="stylesheet">
</head>
<body>

  <nav id="top-nav" class="navbar navbar-default" style="margin-bottom: 0px;">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Fudz', home_path, class: 'navbar-brand'%>
      </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to t('.home'), home_path %></li>
          <li><a href="#"><%= t('.about') %></a></li>
          <li><a href="#"><%= t('.contact')%></a></li>
 
        </ul>
        <ul class="nav navbar-nav navbar-right">
		  
		  <ul class="nav navbar-nav navbar-right">
		      <li class="dropdown">
		        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
		            <%= t('.language') %>
		            <span class="caret"></span>
		        </a>
		      <ul class="dropdown-menu" role="menu">
		        <li>
		            <%= link_to "#{t('.engtranslation')}", change_locale_path(:en) %>
		        </li>
		      </ul>
		      </li>
		  </ul>
			
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="height: 100%;"><%= icon('user', current_user.name, style: 'margin-right: 5px;') %><%= icon('chevron-down', style: 'margin-left: 5px;') %></a>
              <ul id="dropdown-menu" class="dropdown-menu">
         
		          <% if user_signed_in? %>
				  	     <% if current_user.admin?%>
						         <li><%= link_to t('.users'), administrator_path %> </li>
						         <li><%= link_to t('.restaurants'), restaurant_listing_path %> </li>
						         <li><%= link_to t('.cuisines'), cuisines_path %> </li>
								 <li><%= link_to t('.reviews'), ratings_path %> </li>
					     <% end%>
				  <% end%>
		  
				  
                <li><%= link_to t('.myprofile'), user_profile_path(current_user.id) %></li>
                <% if current_user.restaurants.present? %>
                  <li><%= link_to t('.myrestaurants'), users_dashboard_path %></li>
                <% end %>
                <li><%= link_to t('.signout'), destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('.login'), new_user_session_path %></li>
            <li><%= link_to t('.signup'), new_user_registration_path %></li>
          <% end %>


        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<% if Restaurant.where(status: 'pending').count > 0 %>
	<% if user_signed_in?%>
		<% if current_user.admin? %>
			<div class = 'panel'>
	
<%= "You have #{Restaurant.where(status: 'pending').count} pending restaurant applications" %>
 	
			</div>
		<%end%>
	<%end%>
<%end%>

<%= yield %>

  <footer class="" style="background-color: #fff; height: 200px;">
    <div class="container" style="padding-top: 25px;">
      <p class="text-muted">Place footer content here.</p>
    </div>
  </footer>
 
  
</body>
</html>
