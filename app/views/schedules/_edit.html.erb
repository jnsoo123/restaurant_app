<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel">Edit Schedule</h4>
</div>
<div class="modal-body">
  <%= form_for(@schedule, url: schedule_path(@schedule.id), method: :put) do |f| %>
    <div class="form-group">
      <%= f.label "Day" %>
      <%= f.text_field :day, class: 'form-control', placeholder: "Day", required: true%>
    </div>
    <div class="form-group">
      <%= f.label :description, "Opening Time" %>
      <%= f.text_field :opening, class: 'form-control', placeholder: "Opening Time", required: true%>
    </div>
    <div class="form-group">
      <%= f.label :price, "Closing Time"%>
      <%= f.text_field :closing, class: 'form-control', placeholder: "Closing Time", required: true%>
    </div>
    <div class="actions">
      <%= f.submit "Edit Schedule", class: 'btn btn-primary', style: 'width: 100%;' %>
    </div>
  
  <% end %>
</div>

