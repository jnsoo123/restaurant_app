

<div id="restaurants" class="container" style="margin-top: 20px;">
  <h3><%= t('.topresto')%><br><small>Find the best restaurants in the world right here</small></h3>
  
  
    <% unless @restaurants.empty? %>
      <div class="list-group restos">
        <div class="row">
          <% @restaurants.each do |resto| %>
            <div class="col-md-6 col-sm-12 col-xs-12 hvr-grow">
              <%= link_to resto, class: 'list-group-item', style: "margin-bottom: 10px; height: 175px; padding: 0;" do %>
                <div class="row" style="width: 100%;">
                  <div class="col-md-5 col-sm-5 col-xs-5">
                    <div class="clearfix" style="background-image: url('<%= asset_path(display_resto(resto)) %>'); background-repeat: no-repeat; height: 175px; width: 96%; background-position: center; background-size: auto 100%;"></div>
                  </div>
                  <div class="col-md-7 col-sm-7 col-xs-7" style="padding: 20px;">
                    <div class="pull-left">
                      <h3 class="list-group-item-heading">
                        <%= resto.name %>
                      </h3>
                      <p style="font-size: 12px;">
                        <% (resto.ave_ratings.to_i).times do %>
                          <%= icon('star') %>
                        <% end %>
                        <% unless resto.ave_ratings % 1 == 0 %>
                          <%= icon('star-half-o')%>
                          <% (4 - resto.ave_ratings.to_i).times do %>
                            <%= icon('star-o') %>
                          <% end %>
                        <% else %>
                          <% (5 - resto.ave_ratings.to_i).times do %>
                            <%= icon('star-o') %>
                          <% end %>
                        <% end %>
                        &nbsp;&nbsp;(<%= pluralize(resto.ratings.count, 'review') %>)
                      </p>
                      <p class="list-group-item-text" style="margin-top: 20px;"><%= icon('map-marker', truncate(resto.address, length: 45), style: 'margin-right: 12px;') %></p>
                      <p class="list-group-item-text" style="margin-top: 10px;"><%= icon('phone', resto.contact, style: 'margin-right: 10px;') %></p>
                      <p class="list-group-item-text" style="margin-top: 10px;">
                          <%= resto.is_open? %>
                      </p>
                      
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

          <% end %>
        </div>
    
      </div>
    <% else %>
      <div class="list-group">
        <li class="list-group-item" style="margin-bottom: 10px; height: 175px; padding: 0px;">
          <h3 class="text-center" style="padding-top: 50px">No Restaurants available yet</h3>
        </li>
      </div>
      
    <% end %>
  
</div>









