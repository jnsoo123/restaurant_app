<div id="cuisines" class="container wow bounceInUp">
  <h3><%= t('.popular')%><br><small>Explore popular cuisines in the world</small></h3>
    <% unless @cuisines.empty? %>
      <% @cuisines.each do |cuisine| %>
        <%= link_to(restaurant_search_path(search: cuisine.name, searchQuery: cuisine.name)) do %>
          <div class="module col-md-3 col-sm-6 col-xs-6 hvr-grow" style="background: linear-gradient( to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.7)), url('<%= cuisine.avatar.url %>');background-repeat: no-repeat; background-position: center center; background-size: cover; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4), 0 6px 20px 0 rgba(0, 0, 0, 0.7); margin: 10px;">
            <header>
              <h3 class="text-center">
                <%= cuisine.name %>
              </h3>
            </header>
          </div>
        <% end %>
      <% end %>
      
    <% else %>
      <ul class="list-group">
        <li class="list-group-item" style="margin-bottom: 10px; height: 175px; padding: 0px;">
          <h3 class="text-center" style="padding-top: 50px">No Cuisines available yet</h3>
        </li>
      </ul>
    <% end %>
</div>